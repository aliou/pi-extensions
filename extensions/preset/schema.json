{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/aliou/pi-extensions/main/extensions/preset/schema.json",
  "title": "Pi Presets Configuration",
  "description": "Configuration file for Pi preset extension",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/$defs/preset"
  },
  "$defs": {
    "preset": {
      "type": "object",
      "description": "A named preset configuration",
      "properties": {
        "provider": {
          "type": "string",
          "description": "Model provider (e.g., anthropic, google, openai, opencode)"
        },
        "model": {
          "type": "string",
          "description": "Model ID (e.g., claude-opus-4-5, gemini-3-flash-preview)"
        },
        "thinking": {
          "type": "string",
          "enum": ["off", "minimal", "low", "medium", "high", "xhigh"],
          "description": "Thinking level for the model"
        },
        "gateway": {
          "type": "string",
          "enum": ["default", "zen", "openrouter"],
          "description": "Subagent gateway for model routing"
        }
      },
      "additionalProperties": false
    }
  }
}
